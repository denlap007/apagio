{
  "name": "apagio",
  "version": "1.0.0",
  "description": "A simple k8s dashboard",
  "private": "true",
  "scripts": {
    "build": "webpack",
    "start": "run-p dev:client dev:server",
    "dev:server": "cross-env NODE_ENV=development go run ./src/backend/server.go",
    "dev:client": "node_modules/.bin/webpack serve",
    "lint": "node_modules/.bin/eslint --ext .jsx --ext .js ./src/frontend",
    "lint:fix": "node_modules/.bin/eslint --ext .jsx --ext .js ./src/frontend  --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint:fix"
    ],
    "src/**/*.jsx": [
      "npm run lint:fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denlap007/apagio.git"
  },
  "keywords": [
    "k8s",
    "dashboard",
    "kubernetes",
    "react"
  ],
  "author": "The Apagio Team",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/denlap007/apagio/issues"
  },
  "homepage": "https://github.com/denlap007/apagio#readme",
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@hot-loader/react-dom": "^17.0.0",
    "D": "^1.0.0",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "gulp": "^4.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "webpack-merge": "^5.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "style-loader": "^2.0.0",
    "webpack-dev-server": "^3.11.0"
  }
}
